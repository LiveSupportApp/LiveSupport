{
  "name": "YouTubeLiveSupport",
  "version": "0.1.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Warning: no test specified\"",

    "clean": "rm -rf ./dist",
    "clean:win32": "rm -rf ./dist/win32",
    "clean:win64": "rm -rf ./dist/win64",

    "pack": "npm run pack:win32 && npm run pack:win64",
    "pack:win32": "npm run clean:win32 && electron-packager . \"YouTubeLiveSupport\" --out=dist/win32 --platform=win32 --arch=x64  --version=1.6.11 --icon=assets/win32/icon.ico --ignore=\"dist|assets\"",
    "pack:win64": "npm run clean:win64 && electron-packager . \"YouTubeLiveSupport\" --out=dist/win64 --platform=win32 --arch=ia32 --version=1.6.11 --icon=assets/win64/icon.ico --ignore=\"dist|assets\"",

    "archive": "npm run archive:win32 && npm run archive:win64",
    "archive:win32": "npm run pack:win32 && zip -j \"dist/win32/YouTubeLiveSupport-win32.zip\" \"dist/win64/YouTubeLiveSupport-win32-ia32\"",
    "archive:win64": "npm run pack:win64 && zip -j \"dist/win64/YouTubeLiveSupport-win64.zip\" \"dist/win64/YouTubeLiveSupport-win32-x64\""
  },
  "dependencies": {
    "child_process": "^1.0.2",
    "electron": "^1.6.11",
    "electron-prebuilt": "^1.4.13",
    "fs": "0.0.1-security",
    "fs-extra": "^3.0.1",
    "jquery": "^3.2.1",
    "nicojs": "^1.1.8",
    "path": "^0.12.7",
    "request": "^2.81.0",
    "electron-builder": "^2.5.0",
    "electron-packager": "^5.2.0"
  }
}
